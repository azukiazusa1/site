---
import Layout from "../../layouts/Layout.astro";
import MediaLayout from "../../layouts/MediaLayout.astro";
import Timeline from "../../components/Timeline.astro";
import talks from "../../../generated/talks.json";
import { getMediaIcon, getPrefixForTitle } from "../../utils/media";

const items: DataItem[] = talks.map((item) => ({
  ...item,
  icon: getMediaIcon("talk"),
  prefixForTitle: getPrefixForTitle("talk"),
}));
---

<Layout>
  <MediaLayout>
    <Timeline items={items} />
  </MediaLayout>
</Layout>
