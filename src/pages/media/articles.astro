---
import Layout from "../../layouts/Layout.astro";
import MediaLayout from "../../layouts/MediaLayout.astro";
import MainLayout from "../../layouts/MainLayout.astro";
import Timeline from "../../components/Timeline.astro";
import type { Items } from "../../components/Timeline.astro";
import data from "../../../generated/articles.json";
import { getMediaIcon, getPrefixForTitle } from "../../utils/media";

const items: Items = data.map((item) => ({
  ...item,
  icon: getMediaIcon("article"),
  prefixForTitle: getPrefixForTitle("article"),
}));
---

<Layout>
  <MainLayout title="Media / articles">
    <MediaLayout current="article">
      <Timeline items={items} />
    </MediaLayout>
  </MainLayout>
</Layout>
