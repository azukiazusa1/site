---
import Layout from "../../layouts/Layout.astro";
import MediaLayout from "../../layouts/MediaLayout.astro";
import Timeline from "../../components/Timeline.astro";
import data from "../../../generated/articles.json";
import { getMediaIcon, getPrefixForTitle } from "../../utils/media";

const items: DataItem[] = data.map((item) => ({
  ...item,
  icon: getMediaIcon("article"),
  prefixForTitle: getPrefixForTitle("article"),
}));
---

<Layout>
  <MediaLayout>
    <Timeline items={items} />
  </MediaLayout>
</Layout>
