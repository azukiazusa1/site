---
import Layout from "../../layouts/Layout.astro";
import MediaLayout from "../../layouts/MediaLayout.astro";
import MainLayout from "../../layouts/MainLayout.astro";
import Timeline from "../../components/Timeline.astro";
import type { Items } from "../../components/Timeline.astro";
import data from "../../../generated/achievements.json";
import { getMediaIcon, getPrefixForTitle } from "../../utils/media";

const items: Items = data.map((item) => ({
  ...item,
  icon: getMediaIcon("achievement"),
  prefixForTitle: getPrefixForTitle("achievement"),
}));
---

<Layout>
  <MainLayout title="Media / achievements">
    <MediaLayout current="achievement">
      <Timeline items={items} />
    </MediaLayout>
  </MainLayout>
</Layout>
