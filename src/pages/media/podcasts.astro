---
import Layout from "../../layouts/Layout.astro";
import MediaLayout from "../../layouts/MediaLayout.astro";
import Timeline from "../../components/Timeline.astro";
import data from "../../../generated/podcasts.json";
import { getMediaIcon, getPrefixForTitle } from "../../utils/media";

const sites: DataItem[] = data.map((item) => ({
  ...item,
  icon: getMediaIcon("podcast"),
  prefixForTitle: getPrefixForTitle("podcast"),
}));
---

<Layout>
  <MediaLayout>
    <Timeline items={sites} />
  </MediaLayout>
</Layout>
